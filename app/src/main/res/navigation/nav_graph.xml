<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/firstSplashFragment">

    <fragment
        android:id="@+id/firstSplashFragment"
        android:name="com.example.myapplication.client.auth.FirstTransitionFragment"
        android:label="Logo Splash">

        <action
            android:id="@+id/action_firstTransitionFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popUpTo="@id/firstSplashFragment"
            app:popUpToInclusive="true" /> </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.myapplication.client.home.HomeFragment"
        android:label="Home" />

    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.example.myapplication.client.explore.ExploreFragment"
        android:label="Explore" />

    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.example.myapplication.client.favourites.FavouritesFragment"
        android:label="Saved" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.myapplication.client.profile.ProfileFragment"
        android:label="Profile" />
    <fragment
        android:id="@+id/watchlistFragment"
        android:name="com.example.myapplication.client.watchlist.WatchlistFragment"
        android:label="Watchlist" />

    <fragment
        android:id="@+id/eventDetailFragment"
        android:name="com.example.myapplication.client.home.EventDetailFragment"
        android:label="Event Details" />

    <fragment
        android:id="@+id/adminDashboardFragment"
        android:name="com.example.myapplication.admin.AdminDashboardFragment"
        android:label="Admin Dashboard" />

    <fragment
        android:id="@+id/chatbotFragment"
        android:name="com.example.myapplication.client.chatbot.ChatbotFragment"
        android:label="Chatbot" />

    <fragment
        android:id="@+id/transitionFragment"
        android:name="com.example.myapplication.client.auth.TransitionFragment">
        <action
            android:id="@+id/action_welcome_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/transitionFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.myapplication.client.auth.LoginFragment"
        android:label="Login">

        <action
            android:id="@+id/action_login_to_welcome"
            app:destination="@id/transitionFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popUpTo="@id/main_nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.myapplication.client.auth.ForgotPasswordFragment" />

    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.myapplication.client.auth.SignupFragment" />
<fragment
    android:id="@+id/successFragment"
    android:name="com.example.myapplication.client.auth.SuccessFragment"/>
</navigation>
