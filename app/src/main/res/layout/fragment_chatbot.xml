<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/chatToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:title="Chatbot"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/arrow_back_24px"
        app:navigationIconTint="@android:color/white"/>

    <!-- Quick Reply Chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:clipToPadding="false"
        android:scrollbars="none">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupSuggestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:chipSpacing="8dp"
            app:singleSelection="false">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ« Upcoming events"
                style="@style/Widget.MaterialComponents.Chip.Action"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Events near me"
                style="@style/Widget.MaterialComponents.Chip.Action"/>

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”¥ Popular events"
                style="@style/Widget.MaterialComponents.Chip.Action"/>
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Chat Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvChatMessages"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:clipToPadding="false"
            android:overScrollMode="never"/>

        <!-- Bot Typing Animation -->
        <LinearLayout
            android:id="@+id/llBotTyping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingBottom="4dp"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:indeterminate="true"
                style="?android:attr/progressBarStyleSmall"
                android:indeterminateTint="@color/gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="typing..."
                android:textColor="@color/gray"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Input Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@color/gray"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Type a message"
                android:background="@android:color/transparent"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:imeOptions="actionSend"
                android:inputType="textCapSentences|textAutoCorrect"/>

            <ImageButton
                android:id="@+id/btnVoice"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/mic_24px"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/black"
                android:layout_marginEnd="4dp"/>

            <ImageButton
                android:id="@+id/btnSend"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/send_24px"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/black"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
